<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <title>Panel de Administración - Alojamientos </title>
</head>
<body>
<nav class="blue darken-1" role="navigation">
    <div class="nav-wrapper container">
        <a id="logo-container" href=".." class="brand-logo">Logo</a>
        <ul class="right hide-on-med-and-down">
            <li><a id="admin-panel-link" href="../admin/">Panel de Administración</a></li>
            <li><a id="users-link" href="./users">Usuarios</a></li>
            <li><a id="accommodations-link" href="./accommodations">Alojamientos</a></li>
            <li><a id="reservations-link" href="./reservations">Reservas</a></li>
            <li><a href="/auth/logout">Logout</a></li>
        </ul>
        <ul id="nav-mobile" class="sidenav">
            <li><a id="admin-panel-link-mobile" href="./admin/">Panel de Administración</a></li>
            <li><a id="users-link-mobile" href="./users">Usuarios</a></li>
            <li><a id="accommodations-link-mobile" href="./accommodations">Alojamientos</a></li>
            <li><a id="reservations-link-mobile" href="./reservations">Reservas</a></li>
            <li><a href="/auth/logout">Logout</a></li>
        </ul>
        <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    </div>
</nav>
<header>
</header>

<main>
    <!-- Contenido del Panel de Administración -->
    <div class="container">
        <!-- Sección de Alojamientos -->
        <section id="accommodations-section" class="admin-section">
            <h2>Alojamientos</h2>
            <form action="/admin/accommodations" method="post">
                <!-- Campos del formulario para alojamientos según tus necesidades -->
                <input type="text" name="nombre" placeholder="Nombre del alojamiento" required>
                <input type="text" name="ubicacion" placeholder="Ubicación" required>
                <input type="text" name="capacidad" placeholder="Capacidad" required>
                <input type="text" name="precioPorNoche" placeholder="Precio por noche" required>
                <!-- Otros campos para imágenes, disponibilidad, etc. -->
                <button class="btn waves-effect waves-light blue darken-1" type="submit">Crear Alojamiento</button>
            </form>

            <!-- Tabla para mostrar alojamientos existentes -->
            <table class="highlight responsive-table">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Ubicación</th>
                    <th>Capacidad</th>
                    <th>Precio por noche</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                <% if (typeof accommodations !== 'undefined' && accommodations.length > 0) { %>
                    <% accommodations.forEach(accommodation => { %>
                        <tr>
                            <td><%= accommodation.nombre %></td>
                            <td><%= accommodation.ubicacion %></td>
                            <td><%= accommodation.capacidad%></td>
                            <td><%= accommodation.precioPorNoche%></td>
                            <td>
                                <!-- Agregar botones para editar y eliminar (puedes usar formularios o enlaces según prefieras) -->
                                <a class="waves-effect waves-light btn" href="/admin/accommodations/<%= accommodation._id %>/edit">Editar</a>
                                <a class="waves-effect waves-light btn" href="/admin/accommodations/<%= accommodation._id %>/delete">Eliminar</a>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5">No accommodations found.</td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </section>
    </div>
</main>

<!-- Resto del código similar a la vista principal -->

</body>
</html>
