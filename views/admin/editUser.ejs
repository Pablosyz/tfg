<!-- views/admin/editUser.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Editar Usuario</title>
</head>
<body>
<%- include('../navbar', { showProfile: false, showAdmin: true}) %>
<main>

    <div class="container">
        <div class="row">
            <h4 class="header center">Formulario de Edición de Usuario</h4>
        </div>
<!-- Formulario para editar usuario -->
        <form class="col l6 s12" action="/admin/users/<%= user._id %>/edit" method="post">
            <!-- Campos del formulario según tus necesidades -->
            <div class="row">
                <label for="username">Nombre de usuario:</label>
                <input type="text" id="username" name="username" value="<%= user.username %>" required>
            </div>
            <div class="row">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" placeholder="Ingresa nueva contraseña">
            </div>
            <div class="row">
                <label for="nombre">Nombre completo:</label>
                <input type="text" id="nombre" name="nombre" value="<%= user.nombre %>" required>
            </div>
            <div class="row">
                <label for="telefono">Número de teléfono:</label>
                <input type="tel" id="telefono" name="telefono" value="<%= user.telefono %>">
            </div>
            <!-- Otros campos de datos personales según sea necesario -->
            <div class="row">
                <button class="btn waves-effect waves-light teal darken-1" type="submit" name="action">Actualizar Usuario
                    <i class="material-icons right">send</i>
                </button>
                <button class="btn waves-effect waves-light teal darken-1" href="/admin/users">Volver atrás
                    <i class="material-icons right">arrow_back</i>
                </button>
            </div>
        </form>
    </div>
</main>
</body>
</html>
