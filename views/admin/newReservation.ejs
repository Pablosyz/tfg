<!-- views/admin/newReservation.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <title>Panel de Administración - Reservas</title>
</head>
<body>
<%- include('../navbar', { showProfile: false, showAdmin: true}) %>
<header>
</header>

<div class="container">
    <h4>Nueva Reserva</h4>
    <!-- Formulario para crear reservas -->
    <form action="/admin/reservations" method="post">
        <div class="row">
            <div class="input-field col s6">
                <select name="usuario" required>
                    <option value="" disabled selected>Selecciona un usuario</option>
                    <% users.forEach(user => { %>
                        <option value="<%= user._id %>"><%= user.nombre %></option>
                    <% }); %>
                </select>
                <label id="usuario">Usuario:</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <select name="alojamiento" required>
                    <option value="" disabled selected>Selecciona un alojamiento</option>
                    <% accommodations.forEach(accommodation => { %>
                        <option value="<%= accommodation._id %>"><%= accommodation.nombre %></option>
                    <% }); %>
                </select>
                <label id="alojamiento">Alojamiento</label>
            </div>
        </div>
        <div class="row">
            <label for="nombreReserva">Nombre para la reserva:</label>
            <input type="text" id="nombreReserva" name="nombreReserva" required />
        </div>
        <div class="row">
            <label for="emailConfirmacion">Email de Confirmación:</label>
            <input type="email" id="emailConfirmacion" name="emailConfirmacion" />
        </div>
        <div class="row">
            <label for="telefono">Teléfono:</label>
            <input type="text" id="telefono" name="telefono" />
        </div>
        <div class="row">
            <label for="fecha_inicio">Fecha de Inicio:</label>
            <input type="text" id="fecha_inicio" class="datepicker" name="fecha_inicio" required />
        </div>
        <div class="row">
            <label for="fecha_fin">Fecha de Fin:</label>
            <input type="text" id="fecha_fin" class="datepicker" name="fecha_fin" required />
        </div>
        <div class="row">
            <label for="huespedes">Número de Huéspedes:</label>
            <input type="number" id="huespedes" name="huespedes" required />
        </div>
        <div class="row">
            <label id="precioTotal-admin">Precio:</label>
            <input type="number" id="precioTotal-admin" name="precioTotal" required />
        </div>
        <div class="row">
            <div class="input-field col s6">
                <button class="btn waves-effect waves-light teal darken-1" type="submit">Crear Reserva</button>
            </div>
        </div>
    </form>
</div>
<!-- Resto del código similar a la vista principal -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var options = {};
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems, options);
    });
    document.addEventListener('DOMContentLoaded', function () {
        var options = {
            format: 'yyyy-mm-dd',
            autoClose: true,
        };
        var elems = document.querySelectorAll('.datepicker');
        var instances = M.Datepicker.init(elems, options);
    });
</script>
</body>
</html>