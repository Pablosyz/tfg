<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--suppress HtmlUnknownTarget -->
    <link rel="icon" sizes="128x128" href="/images/favicon.jpg">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.cdnfonts.com/css/calistoga-2" rel="stylesheet">
    <!--suppress CssUnknownTarget -->
    <style>
        h1 {
            font-family: 'Calistoga', sans-serif;;
        }
        .parallax-container {
            background:
                    linear-gradient(
                            rgba(0, 0, 0, 0.5),
                            rgba(0, 0, 0, 0.5)
                    ),
                    url(/images/alicante1.jpg);
            background-size: cover;
            height: 100vh;
        }
    </style>
    <title>Alojamientos Alicante</title>
</head>
<body>
<%- include('navbar') %>

<div class="parallax-container">
    <div class="container">
        <br><br>
        <div class="row center">
            <h6 class="header center white-text">TE DAMOS LA BIENVENIDA A</h6>
            <h1 class="header center white-text">Lovely Lofts</h1>
            <h4 class="header col s12 light white-text">¡Echa un vistazo a nuestros alojamientos!</h4>
        </div>
        <div class="row center">
            <br><br>
            <a href="/alojamientos" id="accommodations-button" class="btn-large waves-effect waves-light amber lighten-1">Alójate en Alicante</a>
            <br><br>
        </div>
        <div class="row center">
            <a href="/auth/register" id="register-button" class="btn-large waves-effect waves-light teal">Regístrate</a>
            <a href="/auth/login" id="login-button" class="btn-large waves-effect waves-light teal lighten-2">Inicia sesión</a>
        </div>
    </div>
</div>


<%- include('./footer.ejs') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const elems = document.querySelectorAll('.parallax');
            const instances = M.Parallax.init(elems);
        });
    </script>
</body>
</html>
