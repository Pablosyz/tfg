<!-- views/nuevaReserva.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <title>Reservar Alojamiento</title>
</head>
<body>

<%- include('navbar', { showProfile: true, showAdmin: false}) %>

    <div class="container">
        <h2>Nueva Reserva en</h2>

        <!-- Información del alojamiento (pasada desde el controlador) -->
        <div>
            <h4><%= selectedAccommodation.nombre %></h4>
            <h5>Precio/noche: <%= precioPorNoche %>€ </h5>
            <h6>Ubicación: <%= selectedAccommodation.ubicacion %></h6>

        </div>

        <!-- Formulario de Reserva -->
        <form action="/reservar" method="post">
            <!-- Campos del formulario para la reserva  -->
            <div class="row">
                <label for="nombreReserva">Nombre para la reserva:</label>
                <input type="text" id="nombreReserva" name="nombreReserva" value="<%= usuario.nombre %>" required />
            </div>
            <div class="row">
                <label for="emailConfirmacion">Email de Confirmación:</label>
                <input type="email" id="emailConfirmacion" name="emailConfirmacion" value="<%= usuario.username %>" />
            </div>
            <div class="row">
                <label for="telefono">Teléfono:</label>
                <input type="text" id="telefono" name="telefono" value="<%= usuario.telefono %>" />
            </div>
            <div class="row">
                <label for="fecha_inicio">Fecha de Inicio:</label>
                <input type="text" id="fecha_inicio" class="datepicker" name="fecha_inicio" required />
            </div>
            <div class="row">
                <label for="fecha_fin">Fecha de Fin:</label>
                <input type="text" id="fecha_fin" class="datepicker" name="fecha_fin" required />
            </div>
            <div class="row">
                <label for="huespedes">Número de Huéspedes:</label>
                <input type="number" id="huespedes" name="huespedes" required />
            </div>
            <input type="hidden" name="idAlojamiento" value="<%= selectedAccommodation._id %>">
            <button class="btn waves-effect waves-light teal darken-1" type="submit">Confirmar Reserva</button>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var options = {
                format: 'yyyy-mm-dd',
                autoClose: true,
            };
            var elems = document.querySelectorAll('.datepicker');
            var instances = M.Datepicker.init(elems, options);
        });
    </script>

<!-- Resto del código similar a la vista principal -->

</body>
</html>
