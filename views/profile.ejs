<!-- views/profile.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <title>Perfil</title>
</head>
<body>

<%- include('navbar') %>

<div class="section no-pad-bot" id="profile-banner">
    <div class="container">
        <br><br>
        <div class="row center">
            <h1 class="text-accent-1">Perfil de <%= user.nombre %></h1>
        </div>
        <!-- Mostrar los datos del usuario -->
        <div class="row center">
            <div class="col s12">
                <p><strong>Nombre:</strong> <%= user.nombre %></p>
                <p><strong>Teléfono:</strong> <%= user.telefono %></p>
                <p><strong>Username:</strong> <%= user.username %></p>
            </div>
        </div>
        <!-- Botón de editar que lleva a /editUserProfile -->
        <div class="row center">
            <a href="/profile/editUserProfile" id="edit-profile-button" class="btn-large waves-effect waves-light blue lighten-2">Editar Perfil</a>
        </div>
        <div class="row center">
            <a href="/profile/reservations" id="profile-reserv-button" class="btn-large waves-effect waves-light green lighten-2">Mis reservas</a>
        </div>
    </div>
</div>
    <%- include('./footer.ejs') %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</body>
</html>
