<!-- views/editUserProfile.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <title>Editar Perfil</title>
</head>
<body>
<nav class="blue darken-1" role="navigation">
    <div class="nav-wrapper container"><a id="logo-container" href="../.." class="brand-logo">Logo</a>
        <ul class="right hide-on-med-and-down">
            <li><a href="/profile">Perfil</a></li>
            <li><a href="/reservations">Mis Reservas</a></li>
            <li><a href="/auth/logout">Logout</a></li>
        </ul>
        <ul id="nav-mobile" class="sidenav">
            <li><a href="/profile">Perfil</a></li>
            <li><a href="/reservations">Mis Reservas</a></li>
            <li><a href="/auth/logout">Logout</a></li>
        </ul>
        <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    </div>
</nav>
<div class="section no-pad-bot" id="profile-banner">
    <div class="container">
        <br><br>
        <div class="row center">
            <h1 class="text-accent-1">Editar Perfil de <%= user.nombre %></h1>
        </div>
        <!-- Formulario para editar el perfil con Materialize -->
        <form class="col s12" action="/profile/editUserProfile" method="POST">
            <div class="row">
                <div class="input-field col s12">
                    <input id="telefono" type="tel" name="telefono" value="<%= user.telefono %>" required>
                    <label for="telefono">Teléfono</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="password" type="password" name="password">
                    <label for="password">Nueva Contraseña</label>
                </div>
            </div>
            <% if (message && message.text) { %>
                <div class="row center">
                    <p class="<%= message.type %>"><%= message.text %></p>
                </div>
            <% } %>
            <!-- Botón para enviar los cambios -->
            <div class="row center">
                <button class="btn waves-effect waves-light blue lighten-2" type="submit" name="action">Guardar Cambios</button>
            </div>
            <!-- Botón para volver a la página del perfil -->
            <div class="row center">
                <a href="/profile" class="btn waves-effect waves-light blue lighten-2">Volver al Perfil</a>
            </div>
        </form>
    </div>
</div>

<%- include('../footer.ejs') %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</body>
</html>
