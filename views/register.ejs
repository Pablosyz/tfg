<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <title>Registro de Usuario</title>
</head>
<body>
<nav class="blue darken-1" role="navigation">
    <div class="nav-wrapper container"><a id="logo-container" href="/" class="brand-logo">Logo</a>
        <ul class="right hide-on-med-and-down">
            <li><a href="/profile">Perfil</a></li>
            <li><a href="/auth/login">Login</a></li>
        </ul>
        <ul id="nav-mobile" class="sidenav">
            <li><a href="/profile">Perfil</a></li>
            <li><a href="/auth/login">Login</a></li>
        </ul>
        <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    </div>
</nav>

<% if (error) { %>
    <p style="color: red;"><%= error %></p>
<% } %>
<div class="section no-pad-bot" id="register-banner">
    <div class="container">
        <br><br>
        <div class="row center">
            <form class="col l6 s12" action="/auth/register" method="post">
                <div class="row">
                    <h4 class="header center">Registro de usuario</h4>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <label for="nombre">Nombre y Apellidos</label>
                        <input type="text" id="nombre" name="nombre" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="telefono">Teléfono:</label>
                        <input type="number" id="telefono" name="telefono" required>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <label for="username">Email:</label>
                        <input type="text" id="username" name="username" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                </div>
                <div class="row">
                    <button class="btn waves-effect waves-light blue darken-4" type="submit" name="action">Registrarse
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
        <br><br>
    </div>
</div>

<%- include('./footer.ejs') %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</body>
</html>
