<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <title>Registro de Usuario</title>
</head>
<body>
<nav>
    <div class="nav-wrapper blue darken-1">
        <a href="index" class="brand-logo">Logo</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/profile">Perfil</a></li>
            <li><a href="/auth/login">Login</a></li>
        </ul>
    </div>
</nav>

<% if (error) { %>
    <p style="color: red;"><%= error %></p>
<% } %>
<div class="section no-pad-bot" id="register-banner">
    <div class="container">
        <br><br>
        <div class="row center">
            <form class="col l6 s12" action="/auth/register" method="post">
                <div class="row">
                    <h4 class="header center">Registro de usuario</h4>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <label for="username">Nombre de Usuario:</label>
                        <input type="text" id="username" name="username" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                </div>
                <div class="row">
                    <button class="btn waves-effect waves-light blue darken-4" type="submit" name="action">Registrarse
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
        <br><br>
    </div>
</div>

<footer class="page-footer blue darken-1">
    <div class="container">
        <div class="row">
            <div class="col l6 s12">
                <h5 class="white-text">Footer Content</h5>
                <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
            </div>
            <div class="col l4 offset-l2 s12">
                <h5 class="white-text">Links</h5>
                <ul>
                    <li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
                    <li><a class="grey-text text-lighten-3" href="#!">Link 2</a></li>
                    <li><a class="grey-text text-lighten-3" href="#!">Link 3</a></li>
                    <li><a class="grey-text text-lighten-3" href="#!">Link 4</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container">
            © 2024 Mi aplicación
            <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
        </div>
    </div>
</footer>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</body>
</html>
